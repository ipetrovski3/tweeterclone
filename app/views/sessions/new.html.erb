<section class="hero is-primary">
  <div class="hero-body">
      <h1 class="title has-text-centered">
        Log in
      </h1>
  </div>
</section>
<br>
<div class="columns is-half is-offset-one-quarter">
  <div class="column is-half is-offset-one-quarter">
        <article class="tile is-child notification">
          <div class="content">
          <p class="heading"> Please fill up the form for login! </p>

            <%= form_with url: login_path, scope: :session, local: true do |form| %>

              <div class='field'>
                <%= form.label :email, class:"label" %>
                  <div class='control has-icons-left'>
                    <%= form.email_field :email, class:"input", placeholder: "Email" %>
                     <span class="icon is-small is-left"><i class="fas fa-envelope"></i></span>
                  </div>
              </div>

              <div class='field'>
                <%= form.label :password, class:"label" %>
                  <div class='control has-icons-left'>
                      <%= form.password_field :password, class:"input", placeholder: "Password" %>
                      <span class="icon is-small is-left"><i class="fas fa-lock"></i></span>
                  </div>
              </div>

              <div class='control'>
                <%= form.submit "Log in", class: "button is-info" %>
                <button class="button is-link is-outlined is-info"><%= link_to 'Cancel', root_path %></button>
              </div>

            <% end %>
        </article>
    </div>
  </div>
</div>

