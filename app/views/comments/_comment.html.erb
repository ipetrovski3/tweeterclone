  <div class="column is-6 is-offset-3">
    <div class="content is-size-3">
      <article class="media is-size-6">
        <div class="media-content">
          <div class="content">
            <p>
            <strong><%= comment.commenter %></strong> <small><%= time_ago_in_words(comment.created_at) %> ago</small>
            <br>
            <%= comment.body %>
            </p>
          </div>
          <nav class="level is-mobile">
            <div class="level-left">
              <%= link_to edit_tweet_comment_path(comment.tweet, comment), class:"level-item" do %>
              <span class="icon is-small"><i class="fas fa-edit"></i></span>
              <% end %>
              <%= link_to tweet_comment_path(comment.tweet, comment), class:"level-item", method: :delete, data: { confirm: "Are you sure?"} do %>
              <span class="icon is-small"><i class="far fa-trash-alt"></i></span>
              <% end  %>
            </div>
          </nav>
        </div>
      </article>
    </div>
  </div>
