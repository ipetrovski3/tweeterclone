<section class="hero is-primary">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        All Tweets!
      </h1>
    </div>
  </div>
</section>
<br>
<button class="button is-success is-rounded"><%= link_to 'New Tweet', new_tweet_path %></button>
<div class="columns is-half is-offset-one-quarter">
  <div class="column is-half is-offset-one-quarter">
    <ul class="label"> You have <%= pluralize(Tweet.count, "Tweet") %>  </ul>
    <% @tweets.each do |tweet| %>
    <ul> <%= link_to tweet.title, tweet_path(tweet), class:"input is-rounded", size:"30px" %> </ul>
    <% end %>
  </div>
</div>





